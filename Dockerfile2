FROM ubuntu
MAINTAINER Imran
RUN apt-get update -y
RUN apt-get install -y openjdk-11-jdk
EXPOSE 8083
RUN mkdir -p /app/source
WORKDIR /app/source
COPY ./ /app/source
RUN chmod +x ./mvnw
RUN ./mvnw package
RUN mv ./target/*.jar app.jar
ENTRYPOINT ["java", "-jar", "app.jar"]


